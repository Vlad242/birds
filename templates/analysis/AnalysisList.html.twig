{% extends 'layout.html.twig' %}

{% block title %}База даних досліджень:{% endblock %}

{% block body %}
<div class="our-service-area bg-grey pd-btm-50">
    <div class="container">
        <div class="container-header">
            <h3 class="container-title">База даних досліджень:</h3>
            <hr>
        </div>
        <div class="container-body">
            {% for analys in analysis %}
                <div class="bird-container">
                    <div class="bird-image">
                        <img src="{{ asset('/uploads/analysis/' ~ analys.image) }}" alt="">
                    </div>
                    <div class="bird-data">
                        <div class="bird-title">
                            <h3><a href="{{ path('single_analysis', {'analysis': analys.id}) }}">{{ analys.theme }}</a></h3>
                        </div>
                        <hr>
                        <div class="bird-info-item">
                            <h4><b>Опис дослідження:</b> {{ analys.description }}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}