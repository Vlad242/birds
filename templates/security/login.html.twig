{% extends 'layout.html.twig' %}

{% block title %}Авторизація{% endblock %}

{% block body %}
    <div class="register register-bg">
        <div class="container">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Авторизація</h1>
                <hr>

                {% if app.user %}
                    <div class="mb-3 auth-info">
                        Ви авторизовані як {{ app.user.username }}, <a href="{{ path('app_logout') }}">Вихід</a>
                    </div>
                {% endif %}

                <label for="inputEmail">Email:</label>
                <input type="text" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Пароль:</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Запам'ятати мене
                    </label>
                </div>

                <button class="btn btn-lg" type="submit">
                    Авторизація
                </button>
            </form>
        </div>
    </div>
{% endblock %}
